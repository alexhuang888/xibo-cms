{% extends "form-base.twig" %}
{% import "inline.twig" as inline %}


{% block formTitle %}
    {% trans "Edit Playlist" %}
{% endblock %}

{% block formButtons %}
    {% trans "Help" %}, XiboHelpRender("{{ help }}")
    {% trans "Close" %}, XiboDialogClose(refreshplaylistCallback)
{% if settings.GLOBAL_AIAWARE_ENABLE == 1 and  settings.GLOBAL_AIAWARE_ALLOW_USEREDITING == 1 %}   
    {% trans "Edit AI-Aware Info" %}, XiboPlaylistSaveAITags("{{ urlFor("aitags.edittag.form", {itemtype: playlist.getItemType(), itemid: playlist.playlistId}) }}")
{% endif %}
    {% trans "Switch to Timeline" %}, XiboSwapDialog("{{ urlFor("playlist.timeline.form", {id: playlist.playlistId}) }}?view=timeline")
    {% trans "Save Order" %}, XiboTimelineGridSaveOrder("timelineWidgets")
{% endblock %}

{% block callBack %}timelineGridCallback{% endblock %}
{% set playlistset = [playlist] %}
{% block formHtml %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2">
                <div class="well">
                    <ul class="nav nav-list">
                        <li class="nav-header">{% trans "Add Media" %}</li>
                        <li class="XiboFormButton" href="{{ urlFor("playlist.library.assign.form", {id: playlist.playlistId}) }}"><a tabindex="-1" href="#">{% trans "Library" %}</a></li>
                        {% for module in modules %}
                            {% if module.regionSpecific %}
                                <li class="XiboFormButton" href="{{ urlFor("module.widget.add.form", {type: module.type, id: playlist.playlistId}) }}"><a tabindex="-1" href="#">{{ module.name }}</a></li>
                            {% else %}
                                <li class="libraryUploadForm" href="#" data-playlist-id="{{ playlist.playlistId }}" data-valid-ext="{{ module.validExtensions }}"><a tabindex="-1" href="#">{{ module.name }}</a></li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="col-md-10">
                <div class="XiboGrid" id="{{ random() }}">
                    <div class="">
                        <div class="FilterDiv" id="">
                            <form class="form-inline">
                                {% set title %}{% trans "Playlist" %}{% endset %}
                                {{ inline.dropdown("playlistId", "single", title, playlist.playlistId, playlistset, "playlistId", "name") }}
                            </form>
                        </div>
                    </div>
                    <div class="XiboData">
                        <table id="timelineWidgets" class="table table-striped" data-playlist-id="{{ playlist.playlistId }}" data-order-url="{{ urlFor("playlist.order", {id: playlist.playlistId}) }}">
                            <thead>
                            <tr>
                                <th>{% trans "Order" %}</th>
                                <th>{% trans "Name" %}</th>
                                <th>{% trans "Type" %}</th>
                                <th>{% trans "Duration" %}</th>
                                <th>{% trans "Transition" %}</th>
                                <th>{% trans "widgetid" %}</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
